

    <!-- main -->
    <main class="catalog">
        <div class="filter-nav anim">
            <div class="filter-sort anim">
                <a href="#">Most Popular</a>
                <a href="#">Latest</a>
            </div>
            <div class="search anim">
                <form class="searchContainer">
                    <!-- <div class="searchContainer"> -->
                        <input id="searchValue" type="text" placeholder=" Search "name="search">
                        <button id="btnSearch">
                            <img class="fa"src="img/Search.png" >
                        </button>
                    <!-- </div> -->
                </form>
            </div>
            <div class="filter-categories anim">
                <a href="#">3D</a>
                <a href="#">Vector</a>
                <a href="#">Raster</a>
            </div>
        </div>
        <div class="content">
        <% for( let index = 0; index < data.length; index++ ) { %>
                <div class="item-cart">
                    <img src="<%= data[index].preview[0].url%>" alt="">
                    <div class="download-button">
                        <a href="/detail/<%= data[index].id%>">Download
                            <img src="img/download.png" alt="">
                        </a>
                    </div>
                </div>
        <% } %>
    </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function(){
            $("#btnSearch").click(function(event) {
                event.preventDefault();
                var searchValue = $("#searchValue").val();
                $.ajax({
                    type: "POST",
                    url: "/search",
                    data: {search: searchValue},
                    dataType: 'json',
                    success: function(response){
                        if(response){
                            const data = response.data;
                            if(data.length < 1){
                                $(".content").html(`<p>Aset dengan keyword '${searchValue}' belum tersedia.</p>`);
                            }else{
                                var html = '';
                                data.map((item) => {
                                    html += `                        
                                    <div class="item-cart">
                                        <img src="${item.preview[0].url}" alt="preview">
                                        <div class="download-button">
                                            <a href="/detail/${item.id}">Download
                                                <img src="img/download.png" alt="">
                                            </a>
                                        </div>
                                    </div>`
                                });
                                $(".content").html(html);
                            }
                        }

                    },
                    error: function(error){
                        console.log(error);
                    },complete: function(res){
                        console.log('selesai');
                    }
                });
            });
        })
    </script>
